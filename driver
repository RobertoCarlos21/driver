exit=0
comm=0
Guide=0
start=0
stop=0
while comm< 99:
    Guide = input("Enter a code.: ").lower()
    if Guide == "help":
        print("Exit: To leave")
        print("Start: Initiate")
        print("Stop: to stop the car")
    elif Guide=="start":
        print("You started driving")
    elif Guide=="stop":
        print("You have stopped the car")
    elif Guide=="exit":
        print("See you next time!")
        break
    else:
        print("Can you try using a valid code next time? ")
