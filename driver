started = False
stopped = False
while True:
    Guide = input("Enter a code.: ").lower()
    if Guide == "start":
        if started:
            print("You cannot do that twice!")
        else:
            started=True
            print("You have started the car.")
    elif Guide == "help":
        print("Exit: To leave.")
        print("Start: Initiate.")
        print("Stop: to stop the car.")
    elif Guide == "stop":
        if stopped:
            print("You cannot do that twice!")
        else:
            stopped = True
            print("You have stopped the car")
    elif Guide == "exit":
        print("See you next time.")
        break
    else:
        print("I dont understand that.")
