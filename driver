number_command = 1
while True:
    Guide = input("Enter a code.: ").lower()
    if Guide == "help":
        print("Exit: To leave.")
        print("Start: Initiate.")
        print("Stop: to stop the car.")
    elif Guide=="start":
        number_command +=1
        if number_command == 1:
            print("You started driving.")
        else:
            if number_command == 2:
                print("You cannot do that twice.")
    elif Guide == "stop":
        number_command += 1
        if number_command == 1:
            print("You have stopped the car")
    elif Guide=="exit":
        print("See you next time!")
        break
    else:
        if Guide not in ["start", "stop"]:
            print("Can you try using a valid code next time? ")
            number_command = 1
